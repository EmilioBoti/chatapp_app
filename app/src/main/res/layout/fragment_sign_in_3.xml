<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green"
    tools:context=".views.ui.login.signin.LoginFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSignIn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@null"
        android:elevation="@dimen/dimen_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/keyboard_backspace_24"
        app:navigationIconTint="@color/black_200" />

    <View
        android:id="@+id/circle3"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:background="@drawable/oval_shape2"
        android:elevation="-1dp"
        android:translationX="-262dp"
        android:translationY="-100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/circle1"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_100"
        android:layout_marginBottom="@dimen/dimen_40"
        android:background="@drawable/circle_shape"
        android:translationX="60dp"
        app:layout_constraintBottom_toTopOf="@id/circle2"
        app:layout_constraintEnd_toEndOf="@id/circle2" />

    <View
        android:id="@+id/circle2"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginBottom="@dimen/dimen_40"
        android:background="@drawable/circle_shape"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/circle1"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_40"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5"
        app:layout_constraintBottom_toTopOf="@id/btnSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle3">


        <com.example.chatapp.componentsUi.Input
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20"
            app:bgColor="@color/main_green"
            app:colorHint="@color/white"
            app:colorStroke="@color/white"
            app:cursorColor="@color/white"
            app:hintInput="@string/name"
            app:icon="@drawable/ic_user"
            app:tintIcon="@color/white"
            app:typeInput="text" />

        <com.example.chatapp.componentsUi.Input
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20"
            app:bgColor="@color/main_green"
            app:colorHint="@color/white"
            app:colorStroke="@color/white"
            app:cursorColor="@color/white"
            app:hintInput="@string/email"
            app:icon="@drawable/ic_mail_ic"
            app:tintIcon="@color/white"
            app:typeInput="text" />

        <com.example.chatapp.componentsUi.Input
            android:id="@+id/pwInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15"
            app:bgColor="@color/main_green"
            app:colorHint="@color/white"
            app:colorStroke="@color/white"
            app:cursorColor="@color/white"
            app:hintInput="@string/password"
            app:icon="@drawable/ic_lock"
            app:tintIcon="@color/white"
            app:typeInput="password" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_30"
        android:background="@drawable/login_btn_style"
        android:text="@string/signIn"
        android:textColor="@color/second_green_darker"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>